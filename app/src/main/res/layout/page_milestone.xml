<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="可以左右滑动"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="可以左右滑动"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#EFEFF4"
        android:orientation="horizontal">

        <com.wangzy.exitappdemo.page_timeline.MyListView
            android:id="@+id/listViewLeft"
            style="@style/List"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="#00000000"
            android:dividerHeight="@dimen/margin_content" />

        <com.wangzy.exitappdemo.page_timeline.TimeLineView
            android:id="@+id/timeLineView"
            android:layout_width="@dimen/time_line_width"
            android:layout_height="match_parent" />

        <com.wangzy.exitappdemo.page_timeline.MyListView
            android:id="@+id/listViewRight"
            style="@style/List"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="#00000000"
            android:dividerHeight="@dimen/margin_content" />

    </LinearLayout>

</LinearLayout>